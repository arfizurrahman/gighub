@model GigHubApp.ViewModels.GigDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h2>
    @Model.Gig.Artist.Name
    @if (User.Identity.IsAuthenticated)
    {
        
        <button
            class="btn @(Model.IsFollowing ? "btn-info" : "btn-default") js-toggle-follow" data-user-id="@Model.Gig.ArtistId">
            @(Model.IsFollowing ? "Following" : "Follow")
        </button>
       
    }
</h2>


    <p>Performing at @Model.Gig.Venue on @Model.Gig.DateTime.ToString("d MMM") at @Model.Gig.DateTime.ToString("HH:mm") </p>
   
    @if (Model.IsAttending && User.Identity.IsAuthenticated)
    {
        <p>You are going to this event.</p>
    }


@section scripts
{
    <script>
        $(function() {
            GigDetailsController.init();
        });
    </script>
}
